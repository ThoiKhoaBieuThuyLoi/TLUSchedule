<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.lcsoft.luongchung.tluschedule.MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:background="@color/nen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--load ảnh-->
                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="#ffffff"
                    app:tabSelectedTextColor="#f1cf9d"
                    app:tabIndicatorColor="#f1cf9d"
                    android:id="@+id/tablayout"
                    app:tabMode="fixed"
                    app:tabGravity="fill">
                </android.support.design.widget.TabLayout>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff">
                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true" >
        <LinearLayout
        android:background="@color/nen"
        android:padding="3dp"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn1"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_add"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt1"
                android:text="Thêm lịch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn2"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_thongbao"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:textColor="@color/white"
                android:text="Tin tức"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt2" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn5"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_phonebook"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt5"
                android:text="Danh bạ GV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn3"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp">
                <ImageView
                    android:src="@drawable/ic_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt3"
                android:text="Trò chuyện"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn4"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_support"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt4"
                android:text="Hỗ trợ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>