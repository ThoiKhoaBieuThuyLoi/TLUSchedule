<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgAVTKhach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/avat"
            app:civ_border_width="0dp"
            app:civ_border_color="#00000000"/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="5.7dp"
            android:layout_weight="1"
            android:src="@drawable/arrow_bg2" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="6"
            android:background="@drawable/itemchat2"
            android:padding="16dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNguoiGui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luong Chung:"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#24578e" />
            <TextView
                android:id="@+id/txtKhach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" arting application xml ui design. "
                android:textColor="#313131" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
